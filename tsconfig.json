{
    "compilerOptions": {
        "outDir": "./public/app/",
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "esnext",

        "sourceMap": true,

        "strict": true,
        
        "allowSyntheticDefaultImports": true,
        
        "baseUrl": ".",
        "paths": {
            "park-miller": ["./jspm_packages/npm/park-miller@1.1.0"],
            "rxjs": ["./jspm_packages/npm/rxjs@7.0.0-beta.0"],
            "rxjs/*": ["./jspm_packages/npm/rxjs@7.0.0-beta.0/*"]
        }
    },
    "include": [
        "./src/@types/**/*.d.ts",
        "./src/index.ts"
    ]
}
